<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Header with gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_gradient">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report New Issue"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Photo Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Photo (Optional)"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/issuePhoto"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_add_photo_placeholder"
                        android:background="@drawable/photo_background_stroke"
                        app:riv_corner_radius="20dp"
                        android:contentDescription="Add issue photo" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera_add"
                        android:tint="@color/mapboxBlue"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <!-- Issue Title -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CustomOutlineBox"
                app:boxStrokeColor="@color/input_stroke_normal"
                app:hintTextColor="@color/colorSecondaryText"
                app:startIconDrawable="@drawable/ic_title"
                app:startIconTint="@color/mapboxBlue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Issue Title"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:importantForAutofill="no"
                    android:textColor="@color/colorPrimaryText"
                    android:textColorHint="@color/colorSecondaryText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Issue Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CustomOutlineBox"
                app:boxStrokeColor="@color/input_stroke_normal"
                app:hintTextColor="@color/colorSecondaryText"
                app:startIconDrawable="@drawable/ic_description"
                app:startIconTint="@color/mapboxBlue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Issue Description"
                    android:textSize="15sp"
                    android:minLines="3"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    android:importantForAutofill="no"
                    android:textColor="@color/colorPrimaryText"
                    android:textColorHint="@color/colorSecondaryText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Issue Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Issue Type"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_category"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/mapboxBlue"
                    android:paddingStart="4dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/input_stroke_normal"
                    app:strokeWidth="1.5dp">

                    <Spinner
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@android:color/transparent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryText" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Issue Severity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Severity Level"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_severity"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/mapboxBlue"
                    android:paddingStart="4dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/input_stroke_normal"
                    app:strokeWidth="1.5dp">

                    <Spinner
                        android:id="@+id/severity"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@android:color/transparent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryText" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Selected Location Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/location_background_gradient"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_pin"
                    android:tint="@color/mapboxBlue"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected Location"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/locationInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap on map to select location"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/colorSecondaryText"
                    android:contentDescription="Location info" />
            </LinearLayout>

            <!-- Hint text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ℹ️ Tap anywhere on the map to select location before submitting"
                android:textColor="@color/colorSecondaryText"
                android:textSize="11sp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@color/hint_background"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addLocation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:text="Submit Report"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:cornerRadius="28dp"
        app:backgroundTint="@color/mapboxBlue"
        app:icon="@drawable/ic_send"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:iconSize="20dp"
        app:iconGravity="textEnd"
        app:elevation="4dp"
        android:stateListAnimator="@null" />

</LinearLayout>