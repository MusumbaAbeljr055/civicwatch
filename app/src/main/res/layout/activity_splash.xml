<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:keepScreenOn="true">

    <!-- Main container to center everything vertically -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="false"
        app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <!-- Logo centered in container - Reduced size for faster loading -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
    android:layout_height="120dp"
        android:src="@drawable/ic_civicwatch"
    android:importantForAccessibility="no" />

    <!-- App name - Slightly smaller for better performance -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
    android:text="CivicWatch"
    android:textColor="@android:color/white"
    android:textSize="28sp"
    android:textStyle="bold" />

    <!-- Tagline - Keep as is -->
    <TextView
        android:id="@+id/taglineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
    android:text="Your community's watchful eye"
    android:textColor="@android:color/white"
    android:textSize="14sp"
    android:textStyle="italic" />

    <!-- Progress bar - Slightly smaller -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginTop="24dp"
    android:indeterminateTint="@android:color/white" />

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>